- var language = current.path[1] || 'ts'
- if (language !== 'ts' || language !== 'js' || language !== 'dart') { language = 'ts'; }

md-toolbar(class="main-nav background-regal l-pinned-top l-layer-5",scroll-y-offset-element)
  nav
    h1 <a href="/" md-button>Angular <sup>par Google</sup></a>

    button(class="main-nav-button main-nav-mobile-trigger l-right" aria-label="View Menu" ng-click="appCtrl.toggleMainMenu($event)" md-button) Menu du Site<span class="icon icon-arrow-drop-down"></span>

    ul(ng-class="appCtrl.showMainNav ? 'is-visible' : ''")
      li.l-left <a class="main-nav-button" href="/features.html" md-button>Fonctionnalités</a>
      li.l-left <a class="main-nav-button" href="/docs/#{language}/latest/" md-button>Documents</a>
      li.l-left <a class="main-nav-button" href="/events.html" md-button>Évènements</a>
      li.l-left <a class="main-nav-button" href="/news.html" md-button>Actualités</a>
      li.l-right <a class="main-nav-button" href="/docs/ts/latest/quickstart.html" md-button>Commencez</a>
      li.l-right
        a.main-nav-button.md-button.ng-cloak(ng-click="appCtrl.toggleSource($event)", href)
          span {{appCtrl.sourceVisible?'Hide English':'Show English'}}
